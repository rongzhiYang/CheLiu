<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fillet_all_fff"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/color_e95847"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

    <View
        android:id="@+id/common_dialog_titlepart"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/color_e95847" />

    <LinearLayout
        android:id="@+id/common_dialog_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/common_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:gravity="left"
            android:padding="10dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/fillet_bottom_f3"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/common_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_e95847"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <View
            android:id="@+id/common_dialog_surepart"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/common_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_e95847"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>