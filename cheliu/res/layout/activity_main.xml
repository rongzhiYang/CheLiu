<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <LinearLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_fragment_chewei"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/menu_1"
            android:gravity="center"
            android:text="@string/str_chewei"
            android:textColor="@color/color_64"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/main_fragment_xiche"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/menu_2"
            android:gravity="center"
            android:text="@string/str_xiche"
            android:textColor="@color/color_64"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/main_fragment_baoyang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/menu_3"
            android:gravity="center"
            android:text="@string/str_baoyang"
            android:textColor="@color/color_64"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/main_fragment_wode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/menu_4"
            android:gravity="center"
            android:text="@string/str_wode"
            android:textColor="@color/color_64"
            android:textSize="@dimen/text_13" />
    </LinearLayout>

    <View
        android:id="@+id/main_bottom_line"
        style="@style/line_ddd_2"
        android:layout_above="@id/main_bottom_bar" />
    <FrameLayout
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom_line"
         />

    <android.support.v4.view.ViewPager
        android:id="@+id/splash_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    
</RelativeLayout>